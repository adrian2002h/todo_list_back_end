<h1 align="center">Workshop Todo List</h1>

<a id="new_todo_button"href="/todo/new">Add a new To-do</a>
<h3>Due today - <%= Date.today.strftime("%A %B %d") %></h3>
<ul>
<% @due_today.each do |todo| %>
  <li>
    <a href="/todo/show/<%= todo.id%>"><%= todo.description%></a>
    <span><%= todo.pomodoros %> Pomodoros</span>
  </li>
<% end %>
</ul>

